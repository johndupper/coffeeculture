<!DOCTYPE html>
<html lang="en">
    <head>
        <% include ../partials/head %>
    </head>

    <body>
        <header>
            <% include ../partials/header %>
        </header>

        <% posts.forEach(function(post) { %>
            <div class="post">
                <h4><%= post.title %></h4>
                <p><%= post.content %></p>

                <div class="post-right-justifty">
                    <% var website = post.website %>
                    <% if (website) { %>
                        <a href="<%= website %>" target="_blank"><%= post.title %></a><br>
                    <% } %>
                    <span><%= post.getUpdatedAt() %></span>
                </div>

                <% if (post.user.equals(currentUser.id)) { %>
                    <div class="post-buttons">
                        <a href="/posts/<%= post.id %>"><button class="material-icons">mode_edit</button></a>

                        <form method="post" action="/posts/<%= post._id %>?_method=DELETE" class="post-inline">
                            <button type="submit" class="material-icons">delete</button>
                        </form>
                    </div>

                <% } else { %>

                    <div class="post-buttons">
                        <a href="/posts/<%= post.id %>">
                            <button class="material-icons">comment</button>
                        </a>
                    </div>
                <% } %>
                <!--comments-->
                <div class="comments">
                    <p>Comments go here</p>
                </div>
            </div>
        <% }); %>

        <footer>
            <% include ../partials/footer %>
        </footer>

        <% include ../partials/scripts %>
    </body>