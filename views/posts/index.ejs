<!DOCTYPE html>
<html lang="en">
<head>
    <% include ../partials/head %>
</head>

<body class="container-fluid">
    <header>
        <% include ../partials/header %>
    </header>


    <% posts.forEach(function(post) { %>

    <div class="panel panel-default">

        <div class="panel-heading">
            <h3 class="panel-title"><%= post.title %></h3>
        </div>

        <div class="panel-body">
            <h4><%= post.content %></h4>
            <br>
            <% var webUrl = post.website; %>
            <% if (webUrl) { %>
                <a href="<%= webUrl %>" target="_blank"><%= post.title %></a>
            <% } %>
        </div>

        <div class="panel-footer">
            <p>Posted: <%= post.getUpdatedAt() %></p>

            <% if (post.user.equals(currentUser.id)) { %>
                <a href="/posts/<%= post._id %>"><button type="button" class="btn btn-sm btn-signup post-inline">Edit</button></a>

                <form method="post" action="/posts/<%= post._id %>?_method=DELETE" class="post-inline">
                    <button type="submit" class="btn btn-sm btn-login">Delete</button>
                </form>
            <% } %>

        </div>
    </div>
    <% }); %>

    <footer>
        <% include ../partials/footer %>
    </footer>

    <% include ../partials/scripts %>